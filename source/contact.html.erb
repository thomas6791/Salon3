<%= stylesheet_link_tag "contact" %>
<h1>Contact</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-md-offset-3 col-md-6">
      <div class="contact">
        <form action="https://formspree.io/your@email.com"
              method="POST">
            <div class="row">
              <input type="text" name="nom" placeholder="Nom de famille" class="col-xs-6">
              <input type="text" name="prenom" placeholder="Prenom" class="col-xs-6">
            </div>
            <div class="row">
            <input type="date" name="date" class="col-xs-12">
            <input type="text" name="name" class="col-xs-12">
            <input type="email" name="_replyto" placeholder="@email" class="col-xs-12">
            <input type="tel" name="tel" placeholder="06.." class="col-xs-12">
            <input type="submit" value="Envoyer" class="bouton-contact col-xs-12">
            </div>
        </form>
      </div>
    </div>
  </div>
</div>
